---
import {
    ExclamationCircleIcon,
    ShieldCheckIcon,
} from "@heroicons/react/24/outline";
import Layout from "../components/Layout.astro";
---

<Layout>
    <section
        class="flex flex-wrap justify-center items-center w-full space-y-4 px-36"
    >
        <div class="flex justify-center w-full">
            <img
                src="/Icon.svg"
                class="md:h-12 h-8 transition hover:rotate-180 duration-200"
                alt="HampHack Lightning Bolt"
            />
        </div>
        <h1
            class="font-bold text-3xl w-full text-center dark:text-white text-black"
        >
            <span class="animated-underline">Register</span>
        </h1>

        <h2
            class="font-medium text-xl w-full text-center dark:text-white text-black"
        >
            We&apos;re so glad you want to come! Please fill out the form below
            to register for HampHack 2023.
        </h2>

        <form
            action={import.meta.env.API_URL}
            method="POST"
            class="grid md:grid-cols-2 gap-4"
        >
            <div>
                <label
                    for="name"
                    class="block text-sm font-medium dark:text-white text-black"
                >
                    Name
                    <span class="text-red-500">*</span>
                </label>
                <div class="mt-1">
                    <input
                        type="text"
                        name="name"
                        id="name"
                        required
                        class="block w-full rounded-md dark:bg-black-200 dark:border-black-100 text-white border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
                        placeholder="Erlich Bachman"
                    />
                </div>
            </div>

            <div>
                <label
                    for="email"
                    class="block text-sm font-medium dark:text-white text-black"
                >
                    Email
                    <span class="text-red-500">*</span>
                </label>
                <div class="mt-1">
                    <input
                        type="text"
                        name="email"
                        id="email"
                        required
                        class="block w-full rounded-md dark:bg-black-200 dark:border-black-100 text-white border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
                        placeholder="erlich@piedpiper.net"
                    />
                </div>
            </div>

            <div>
                <label
                    for="phone"
                    class="block text-sm font-medium dark:text-white text-black"
                >
                    Phone Number
                </label>
                <div class="mt-1">
                    <input
                        type="tel"
                        name="phone"
                        id="phone"
                        class="block w-full rounded-md dark:bg-black-200 dark:border-black-100 text-white border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm"
                        placeholder="413-867-5309"
                    />
                </div>
            </div>

            <div>
                <label
                    for="year"
                    class="block text-sm font-medium dark:text-white text-black"
                >
                    Year
                    <span class="text-red-500">*</span>
                </label>
                <div class="mt-1">
                    <select
                        name="year"
                        id="year"
                        class="block w-full rounded-md dark:bg-black-200 dark:border-black-100 border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm dark:text-white text-black"
                        required
                    >
                        <option disabled value="" selected>
                            {" "}
                            Select...
                        </option>
                        <option>Freshman</option>
                        <option>Sophomore</option>
                        <option>Junior</option>
                        <option>Senior</option>
                        <option>Graduate</option>
                    </select>
                </div>
            </div>

            <div>
                <label
                    for="institution"
                    class="block text-sm font-medium dark:text-white text-black"
                >
                    Institution
                    <span class="text-red-500">*</span>
                </label>
                <div class="mt-1">
                    <select
                        name="institution"
                        id="institution"
                        class="block w-full rounded-md dark:bg-black-200 dark:border-black-100 border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm dark:text-white text-black"
                        required
                    >
                        <option disabled value="" selected>
                            {" "}
                            Select...
                        </option>
                        <option>Hampshire College</option>
                        <option>Smith College</option>
                        <option>Mount Holyoke College</option>
                        <option>Amherst College</option>
                        <option>University of Massachusetts Amherst</option>
                        <option>Other</option>
                    </select>
                </div>
            </div>

            <div>
                <label
                    for="tshirt"
                    class="block text-sm font-medium dark:text-white text-black"
                >
                    T-Shirt Size
                    <span class="text-red-500">*</span>
                </label>
                <div class="mt-1">
                    <select
                        name="tshirt"
                        id="tshirt"
                        class="block w-full rounded-md dark:bg-black-200 dark:border-black-100 border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm dark:text-white text-black"
                        required
                    >
                        <option disabled value="" selected>Select...</option>
                        <option value="XS">Extra Small</option>
                        <option value="S">Small</option>
                        <option value="M">Medium</option>
                        <option value="L">Large</option>
                        <option value="XL">Extra Large</option>
                        <option value="2XL">Double Extra Large</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
            </div>

            <button type="submit" class="col-span-full">
                <span class="block w-full rounded-md shadow-sm">
                    <span
                        class="inline-flex justify-center w-full rounded-md border border-transparent px-4 py-2 bg-green-600 text-base font-medium text-black hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 sm:text-sm"
                    >
                        Register
                    </span>
                </span>
            </button>

            <div class="col-span-full">
                <p class="text-xs text-gray-500 flex items-center gap-x-1">
                    <ExclamationCircleIcon className="inline-block w-5 h-5" />{
                        " "
                    }
                    You must be 18 years or older to participate
                </p>
            </div>

            <div class="col-span-full">
                <p class="text-xs text-gray-500 flex items-center gap-x-1">
                    <ShieldCheckIcon className="inline-block w-5 h-5" /> Your information
                    will be kept private. See our
                    <a
                        href="/privacy"
                        class="text-green-600 hover:text-green-700"
                    >
                        Privacy Policy
                    </a>
                </p>
            </div>
        </form>
    </section>
</Layout>
