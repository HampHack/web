---
import Airtable from "airtable";
import Layout from "../components/Layout.astro";

const table = new Airtable({
  apiKey: import.meta.env.AIRTABLE_API_KEY,
}).base(import.meta.env.AIRTABLE_BASE_ID)("FAQ");

const faqs = await table
  .select({
    view: "Grid view",
  })
  .all();
---

<Layout>
  <h1
    class="flex w-full text-center justify-center items-center uppercase font-black md:text-6xl text-4xl dark:text-white text-black"
  >
    FAQ
    <img
      src="/Icon.svg"
      class="md:h-12 h-8 transition hover:rotate-180 duration-200"
      alt="HampHack Lightning Bolt"
    />
  </h1>

  <section
    id="faqs"
    class="dark:text-white text-black space-y-2 mx-auto max-w-7xl px-8 md:px-16"
  >
    {
      faqs.map((faq) => (
        <details class="border-b-2 border-gray-200 dark:border-gray-800">
          <summary class="font-bold text-xl">{faq.fields.Question}</summary>
          <p class="text-lg">{faq.fields.Answer}</p>
        </details>
      ))
    }
  </section>

  <p class="text-white font-bold text-center text-xl">
    If you have any more questions, please contact us at
    <a
      href="mailto:hamphack@hampshire.edu"
      class="text-blue-500 hover:text-blue-700 dark:text-blue-300 dark:hover:text-blue-200"
    >
      hamphack@hampshire.edu
    </a>
  </p>
</Layout>
